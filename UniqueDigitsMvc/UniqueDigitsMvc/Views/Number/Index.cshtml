@model UniqueDigitsMvc.Models.NumberViewModel
@{
    ViewData["Title"] = "Unique Digits Generator";
}

<h2>Unique Digits Generator</h2>

<form asp-action="Index" method="post">
    <!-- Input field for the 9-digit number with validation message -->
    <div>
        <label>Enter 9-digit number:</label>
        <input asp-for="InputNumber" />
        <span asp-validation-for="InputNumber" class="text-danger"></span>
    </div>
    <br />
    <!-- Submit button to process the input and generate unique digits -->
    <button type="submit">Submit</button>
</form>

<!-- Display the output with unique digits if available -->
@if (!string.IsNullOrEmpty(Model.UniqueNumber))
{
    <p style="color: green; font-weight:bold">Output: @Model.UniqueNumber</p>
}

@section Scripts {
    <!-- Enable client-side validation scripts -->
    <partial name="_ValidationScriptsPartial" />
}
