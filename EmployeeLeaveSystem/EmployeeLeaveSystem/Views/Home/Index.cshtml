@{
    ViewData["Title"] = "Welcome";
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold text-primary">Welcome to Employee Leave System</h1>
    <p class="lead text-muted mb-5">
        Manage leaves efficiently — apply, track, and review leave requests with ease.
    </p>

    <div class="row justify-content-center">
        <!-- Employee Card -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body">
                    <h3 class="card-title text-success mb-3">
                        <i class="bi bi-person-circle"></i> For Employees
                    </h3>
                    <p class="card-text text-muted">
                        Submit new leave requests with start and end dates, provide a reason,
                        and track the approval status of your applications.
                    </p>
                </div>
            </div>
        </div>

        <!-- Manager Card -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body">
                    <h3 class="card-title text-info mb-3">
                        <i class="bi bi-people-fill"></i> For Managers
                    </h3>
                    <p class="card-text text-muted">
                        Review pending leave requests from employees, approve or reject them,
                        and ensure smooth workflow management in your team.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
