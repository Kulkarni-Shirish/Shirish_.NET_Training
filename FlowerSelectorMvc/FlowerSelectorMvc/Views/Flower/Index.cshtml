@model FlowerSelectorMvc.Models.FlowerViewModel
@{
    ViewData["Title"] = "Flower Selector";
}

<h2>Flower Selector</h2>

<form asp-action="Index" method="post">
    <!-- Display flowers as radio buttons in two columns using flex layout -->
    <div style="display: flex; flex-wrap: wrap; max-width: 400px;">
        @for (int i = 0; i < Model.Flowers.Count; i++)
        {
            <div style="width: 50%;">
                <input type="radio" asp-for="SelectedFlower" value="@Model.Flowers[i]" />
                <label>@Model.Flowers[i]</label>
            </div>
        }
    </div>
    <br />
    <button type="submit">Submit</button>
</form>

<!-- Show selected flower after form submission -->
@if (ViewBag.Message != null)
{
    <p style="color: green; font-weight:bold">@ViewBag.Message</p>
}

<!-- Display validation error if no flower is selected -->
<span asp-validation-for="SelectedFlower" class="text-danger"></span>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
